<h1>Listing Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td style='border: 1px solid black'><%= article.title %></td>
      <td style='border: 1px solid black'><%= article.text %></td>
      <td style='border: 1px solid black'><%= link_to 'Show', article_path(article) %></td>
      <td style='border: 1px solid black'><%= link_to 'Edit', edit_article_path(article) %></td>
      <td style='border: 1px solid black'><%= link_to 'Destroy', article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Article', new_article_path %>
